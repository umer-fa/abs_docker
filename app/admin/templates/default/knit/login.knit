<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="github.com/comely-io">
    <meta name="generator" content="Jekyll v4.0.1">
    <title>{$page.title}</title>
    {knit "_favicon"}
    <link href="{$page.root}default/css/animate.min.css" rel="stylesheet">
    <link href="{$page.root}default/css/bootstrap.min.css" rel="stylesheet">
    <link href="{$page.root}default/css/ionicons.min.css" rel="stylesheet">
    <link href="{$page.root}default/css/font-awesome.min.css" rel="stylesheet">
    <link href="{$page.root}default/css/noty.min.css" rel="stylesheet">
    <link href="{$page.root}default/css/login.min.css" rel="stylesheet">
    <link href="{$page.root}default/css/style.min.css" rel="stylesheet">
</head>
<body class="text-center">
<div class="container">
    <div class="row justify-content-center">
        <div class="col-sm-6 col-sm-offset-3 col-xs-12">
            <div class="card">
                <h4 class="card-header"><i class="icon ion-lock-combination"></i> Authenticate</h4>
                <div class="card-body">
                    {foreach $errors as $error}
                        <div class="alert alert-{if $error.type|strtolower === 'notice'}info{elseif $error.type|strtolower === 'warning'}warning{else}danger{/if}">
                            [{$error.type}] {$error.message} in file “<u>{$error.file}</u>” on line #
                            <u>{$error.line}</u>
                        </div>
                    {/foreach}
                    {foreach $flashMessages as $flashMessage}
                        <div class="alert alert-{$flashMessage.type}">
                            {$flashMessage.message}
                        </div>
                    {/foreach}

                    <form class="xhr-form backend-signin-form" method="post" action="{$page.root}signin">
                        <input type="hidden" name="{$form.fields.token}" value="{$page.token}">
                        <input type="hidden" name="{$form.fields.hash}" value="{$form.hash}">

                        <div class="form-group">
                            <label class="sr-only" for="{$form.fields.email}">E-mail address</label>
                            <input type="text" maxlength="64" name="{$form.fields.email}" id="{$form.fields.email}"
                                   autocomplete="off"
                                   data-onload-value="" placeholder="E-mail address"
                                   class="form-control">
                        </div>
                        <div class="form-group">
                            <label class="sr-only" for="{$form.fields.password}">Password</label>
                            <input type="password" maxlength="32" name="{$form.fields.password}"
                                   id="{$form.fields.password}" autocomplete="off"
                                   data-onload-value="" placeholder="Password" class="form-control">
                        </div>
                        <hr>
                        <div class="form-group">
                            <label class="sr-only" for="{$form.fields.totp}">TOTP Code</label>
                            <input type="text" maxlength="6" name="{$form.fields.code}" id="{$form.fields.totp}"
                                   autocomplete="off"
                                   data-onload-value="" placeholder="2FA Code" class="input-int form-control">
                        </div>
                        <hr>
                        <button type="submit" class="btn btn-block btn-primary btn-lg">Sign In</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="{$page.root}default/js/jquery-3.5.1.min.js" type="text/javascript"></script>
<script src="{$page.root}default/js/bootstrap.min.js" type="text/javascript"></script>
<script src="{$page.root}default/js/noty.min.js" type="text/javascript"></script>
<script src="{$page.root}default/js/app/app.min.js" type="text/javascript"></script>
<script src="{$page.root}default/js/app/xhr.min.js" type="text/javascript"></script>
</body>
</html>
